---
import type { Project } from '../lib/projects'
import { STATUS_CONFIG, TAG_COLORS } from '../lib/projects'

interface Props {
  project: Project
  variant?: 'full' | 'compact'
}

const { project, variant = 'full' } = Astro.props
const statusConfig = STATUS_CONFIG[project.status]
---

{variant === 'full' ? (
  <!-- Full variant: Build Log style (large card, "Try It →" button) -->
  <div class='rounded-2xl border border-border bg-primary-foreground p-6 shadow-lg shadow-black/5 transition hover:-translate-y-0.5 hover:border-orange-300 hover:shadow-xl'>
    <div class='flex flex-wrap items-start justify-between gap-4'>
      <div class='space-y-3'>
        <div class='flex items-center gap-3'>
          <h3 class='text-xl font-semibold text-foreground'>{project.name}</h3>
          <span class={`inline-flex items-center gap-1 rounded-full px-2.5 py-1 text-xs font-semibold ${statusConfig.bgColor} ${statusConfig.textColor}`}>
            <span class={`h-1.5 w-1.5 rounded-full ${statusConfig.dotColor}`}></span>
            {statusConfig.label}
          </span>
        </div>
        <p class='max-w-xl text-sm text-muted-foreground'>
          {project.description}
        </p>
        <div class='flex flex-wrap gap-2'>
          {project.tags.map((tag) => (
            <span class={`rounded-full px-2.5 py-1 text-xs font-medium ${TAG_COLORS[tag.color]}`}>
              {tag.name}
            </span>
          ))}
        </div>
      </div>
      <a
        href={project.url}
        class='inline-flex items-center gap-2 rounded-full bg-orange-500 px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-orange-400'
      >
        Try It →
      </a>
    </div>
  </div>
) : (
  <!-- Compact variant: Home page style (smaller, nested card) -->
  <div class='rounded-xl border border-border bg-background p-4 transition hover:border-orange-300 hover:shadow-sm'>
    <div class='flex items-start justify-between gap-3'>
      <div class='space-y-1.5'>
        <div class='flex items-center gap-2'>
          <span class='text-base font-semibold text-foreground'>{project.name}</span>
          <span class={`inline-flex items-center gap-1 rounded-full px-2 py-0.5 text-xs font-semibold ${statusConfig.bgColor} ${statusConfig.textColor}`}>
            <span class={`h-1.5 w-1.5 rounded-full ${statusConfig.dotColor}`}></span>
            {statusConfig.label}
          </span>
        </div>
        <p class='text-sm text-muted-foreground'>{project.shortDescription}</p>
        <div class='flex flex-wrap gap-1.5 pt-0.5'>
          {project.tags.map((tag) => (
            <span class={`rounded-full px-2 py-0.5 text-xs font-medium ${TAG_COLORS[tag.color]}`}>
              {tag.name}
            </span>
          ))}
        </div>
      </div>
      <a
        href={project.url}
        class='inline-flex shrink-0 items-center gap-1 rounded-full bg-orange-500 px-3 py-1.5 text-xs font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-orange-400'
      >
        Try It →
      </a>
    </div>
  </div>
)}
